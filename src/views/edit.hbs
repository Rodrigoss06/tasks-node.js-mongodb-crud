<div class="container">
    <div class="row">
        <div class="col-md-8 offset md-3">
            <div style="text-align:center">
                <div class="card card-body bg-dark p-4 text-white rounded-0">
                    <form action="/edit/{{task._id}}" method="post">
                        <div class="mb-3">
                            <input 
                                type="text" 
                                name:"title" 
                                placeholder="Title" 
                                value = "{{task.title}}"
                                class="form-control rounded-0 bg-dark text-white"
                            />

                        </div>
                
            
                        <div class="mb-3">
                            <textarea 
                                name="description"  
                                rows="3" 
                                placeholder="Add Description"
                                class="form-control rounded-0 bg-dark text-white" 
                                >{{task.description}}
                            </textarea>

                        </div>
                        <button class="btn btn-primary">Update</button>
                    </form>
                </div>
            </div>
        </div>                    
    </div>  
</div>